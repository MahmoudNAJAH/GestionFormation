<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/StyleLayout.css" rel="stylesheet" />
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        
        <div class="container">
            
            <div class="navbar-header">
                <img class="logo" src="~/Images/dawan.png" alt="Logo DAWAN" width="50" height="50"/>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <li>@Html.ActionLink("À propos de", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Formations", "Index", "Formation")</li>
                    <li>@Html.ActionLink("Session De Formation", "Index", "SessionDeFormations")</li>
                    <li>@Html.ActionLink("Apprenant", "Index", "Apprenant")</li>
                    <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>

                    @if (Session["userConnected"] != null)
                    {
                        <li>@Html.ActionLink("Emploi Du Temps", "Index", "EmploiDuTemps")</li>
                        <li>@Html.ActionLink("Partage de Fichiers", "Index", "PartageFichier")</li>
                        <li>@Html.ActionLink("Déconnexion", "Logout", "Authentification")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="basdepage">
            <p>&copy; @DateTime.Now.Year - DAWAN</p>
        </footer>
    </div>
    <div id="boxscroll2" style="overflow: auto; position: relative;" tabindex="5001"></div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
