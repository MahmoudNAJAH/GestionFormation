<body class="text-center">
    <form class="form-signin">
        <img class="mb-4" src="http://www.dawan.fr/images/institutionnel-logo.png" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Connectez-vous</h1>
        <div class="form-label-group">
            <input type="email" id="inputEmail" class="form-control" placeholder="Adresse mail" required>
        </div>
        <div class="form-label-group">
            <input type="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
        </div>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me">Se souvenir de moi
            </label>
        </div>
        <button class="btn btn-lg btn-danger btn-block" type="submit">Se connecter</button>
        <div class="form-label-group">
            <h1>            </h1>
            <a href="">Problèmes de connexion</a>
        </div>


    </form>
