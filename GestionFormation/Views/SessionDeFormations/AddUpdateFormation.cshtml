@model IEnumerable<GestionFormation.DTO.FormationDTO>

@{
    ViewBag.Title = "AddUpdateFormation";
}

<h2>AddUpdateFormation</h2>

Formation :
@ViewBag.SdfId
@GestionFormation.Services.SessionDeFormationService.GetSessionDeFormation(Int32.Parse(ViewBag.SdfId))?.Nom;

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.ActionLink("Ajouter", "Ajouter", new { id = item.FormationId }) |

            </td>
        </tr>
    }

</table>

@Html.ActionLink("Retour", "Retour", "SessionDeFormations", new { area = "" }, new { @class = "btn" })

